{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceRoot": "./src",
    "sourceMap": true,
    "allowJs": true,
    "declaration": false,
    "allowUnusedLabels": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "baseUrl": "./"
  },
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}

