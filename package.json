{
  "name": "shorturl",
  "version": "1.0.0",
  "description": "Generate Short URL",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prebuild": "rimraf dist",
    "postinstall": "npm install --prefix server && npm install --prefix client",
    "build": "npm run build:server && npm run build:client",
    "start": "cd ./server && npm run start",
    "start:dev": "concurrently \"cd ./server && npm run start:dev\" \"cd ./client && npm run start\"",
    "build:client": "cd ./client && npm run build",
    "build:server": "cd ./server && npm run build"
  },
  "keywords": [
    "Short",
    "URL",
    "React",
    "NestJS"
  ],
  "author": "Ashish Patel <zoom2ashish@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^5.1.0",
    "rimraf": "^3.0.2",
    "typescript": "^3.7.5"
  },
  "cacheDirectories": [
    "node_modules",
    "client/node_modules",
    "server/node_modules"
  ]
}
