{
  "name": "shorturl",
  "version": "1.0.0",
  "description": "Generate Short URL",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prebuild": "rimraf dist",
    "-postinstall": "cd ./server && npm install && cd ./client && npm install",
    "build": "npm run build:server && npm run build:client",
    "start": "cd ./server && npm run start && cd ..",
    "start:dev": "concurrently \"cd ./server && npm run start:dev\" \"cd ./client && npm run start\"",
    "prebuild:client": "cd ./client && npm install --unsafe-perm",
    "build:client": "cd ./client && npm run build && cd ..",
    "prebuild:server": "cd ./server && npm install --unsafe-perm",
    "build:server": "cd ./server && npm run build && cd .."
  },
  "keywords": [
    "Short",
    "URL",
    "React",
    "NestJS"
  ],
  "author": "Ashish Patel <zoom2ashish@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^5.1.0",
    "rimraf": "^3.0.2"
  },
  "cacheDirectories": [
    "node_modules",
    "client/node_modules",
    "server/node_modules"
  ]
}
